@{
    Layout = null;
}

<div>
    <form ng-submit="vm.submit()" method="post" name="frmPayment">
        <!-- Payment Details -->
        <div class="card">
            <fieldset>
                <legend>เบิกจ่ายงบประมาณ ศูนย์ต้นทุน: <span class="text-primary"> {{ vm.payment.CostCenterID }} </span></legend>

                <div class="row">
                    <div class="form-horizontal col-md-6">
                        <div class="form-group">
                            <label for="txtYear" class="col-md-4 control-label">ปีงบประมาณ</label>
                            <div class="col-md-4">
                                <select class="form-control input-sm" ng-model="vm.payment.Year" ng-options="y.Year as y.Year for y in vm.years"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">
                                ผู้เบิก
                            </label>
                            <div class="col-md-6">
                                <select class="form-control input-sm" ng-model="vm.payment.RequestBy" ng-options="emp.EmployeeID as emp.Description for emp in vm.employees">
                                    <option value=""> ======= กรุณาเลือก ======= </option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="control-label" for="txtDescription">
                                รายละเอียด:
                            </label>
                            <textarea ng-model="vm.payment.Description" class="form-control input-sm" rows="3" id="txtDescription" placeholder="รายละเอียด"></textarea>
                        </div>
                    </div>

                </div>
            </fieldset>


            <!-- เลือกงบประมาณ   -->
            <hr />
            <div class="row">
                <div class="form-group col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon">เลือกบัญชี</span>
                        <select class="form-control" ng-model="vm.selectbudget" ng-options="budget.BudgetID as budget.BudgetName for budget in vm.budgets | filter:{ CostCenterID: vm.payment.CostCenterID }">
                            <option value=""> =========== กรุณาเลือก =========== </option>
                        </select>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="button" ng-click="vm.addNewTransaction()">ตกลง</button>
                        </span>
                    </div>
                </div>
            </div>

            <!-- ตารางรายการเบิก -->
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th class="col-md-1 text-center"> ลำดับ </th>
                        <th class="text-center"> ชื่อบัญชี </th>
                        <th class="col-md-2 text-center"> งบที่ได้รับ</th>
                        <th class="col-md-2 text-center"> เบิก</th>
                        <th class="col-md-1 text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="transaction in vm.transactions | filter : { Status: 'Active' }">

                        <td class="text-center">
                            {{ $index + 1 }}
                        </td>
                        <td>
                            {{ transaction.Budget.Account.AccountID }} - {{ transaction.Budget.Account.AccountName }}
                        </td>
                        <td class="text-center">
                            {{ transaction.Budget.BudgetAmount | number: 2}}
                        </td>
                        <td class="text-center">
                            <input type="number" ng-model="transaction.Amount"  ng-required="true" class="form-control input-sm text-right" ng-change="vm.updateTotalAmount()" />
                            <span ng-show="frmPayment.transaction.Amount.$error.min">
                                Please fill form.
                            </span>
                        </td>
                        <td class="text-center">
                            <a ng-click="vm.removeTransaction( transaction.Budget.BudgetID )">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>

                    <tr ng-show="vm.transactions.length > 0">
                        <th></th>
                        <th></th>
                        <th class="text-right">รวมเบิก</th>
                        <th class="text-right">{{ vm.payment.TotalAmount | number: 2 }}</th>
                        <th></th>
                    </tr>
                </tbody>
            </table>
            <div class="row">
                <div class="col-md-2 col-md-offset-10">
                    <button type="submit" class="btn btn-primary btn-lg pull-right" ng-disabled="frmPayment.$invalid">
                        <i class="fa fa-floppy-o" aria-hidden="true"></i>
                        บันทึก
                    </button>
                </div>
            </div>


        </div>
    </form>
</div>