@{
    Layout = null;
}


<div>
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
            <div class="card">
                <form class="form-horizontal" name="frmCreate" method="post" novalidate>
                    <fieldset>
                        <legend align="center">เพิ่มข้อมูลงบประมาณ</legend>
                        <div class="form-group">
                            <label for="txtYear" class="col-md-6 control-label">ปีงบประมาณ :</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" id="txtYear" ng-model="vm.form.year" placeholder="พ.ศ." ng-required="true" autofocus/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-6 control-label">บัญชี :</label>
                            <div class="col-md-5">
                                <input type="text" ng-model="vm.form.accountid" class="form-control" list="accounts" placeholder="5XXXXXXX" ng-change="vm.accountChange()"/>
                                <datalist id="accounts">
                                    <option ng-repeat="account in vm.accounts" value="{{ account.AccountID }}">
                                </datalist>
                            </div>
                            
                        </div>

                        <div class="form-group">
                            <label class="col-md-6 control-label">ชื่อบัญชี : </label>
                            <div class="col-md-5">
                                <input type="text" class="form-control" ng-model="vm.form.accountname" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-6 control-label">จำนวนเงิน :</label>
                            <div class="col-md-5">
                                <input type="number" class="form-control" placeholder="0.00" ng-model="vm.form.amount"/>
                            </div>
                        </div>

                        <br />
                        <div class="form-group">
                            <div class="col-md-4 col-lg-offset-2">
                                <a ui-sref="budget" class="btn btn-default btn-block">ยกเลิก</a>
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary btn-block">
                                    <i class="fa fa-save" aria-hidden="true"></i> บันทึก
                                </button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
