@{
    Layout = null;
}

<div class="alert alert-dismissible alert-warning" ng-if="hasError">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h5>พบข้อผิดพลาด!!!</h5>
    <p>{{ errorMsg }}</p>
</div>

<div class="alert alert-dismissible alert-success" ng-if="hasSuccess">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h5>เพิ่มข้อมูลสำเร็จ</h5>
</div>

<div style="margin: 100px;">
    <form class="form-horizontal" ng-submit="submit()">
        <div class="form-group">
            <label for="txtYear" class="col-md-5 control-label">ปีงบประมาณ</label>
            <div class="col-md-3">
                <input type="text" class="form-control input-sm" id="txtYear" value="2560" ng-model="budget.Year" />
            </div>
        </div>

        <div class="form-group">
            <label for="fileBudget" class="col-md-5 control-label">Text File</label>
            <div class="col-md-3">
                <input type="file" class="input-sm" id="fileBudget" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 col-md-offset-3">
                <a href="#/budget" class="btn btn-default btn-block">ยกเลิก</a>
            </div>
            <div class="col-md-2">
                <input type="submit" value="ตกลง" class="btn btn-primary btn-block" />
            </div>
        </div>
    </form>
</div>