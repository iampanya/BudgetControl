@{
    Layout = null;
}
<div class="row">
    <div class="col-md-2 col-md-offset-10">
        <a ui-sref="newbudget" class="btn btn-primary pull-right">
            <i class="fa fa-plus" aria-hidden="true"></i> เพิ่มงบประมาณ
        </a>
    </div>
    @*<div class="col-md-2">
        <a ui-sref="uploadbudget" class="btn btn-primary pull-right">
            <i class="fa fa-upload" aria-hidden="true"></i> นำเข้าข้อมูลจาก SAP
        </a>
    </div>*@
</div>
<div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <h3>
                    <span class="pull-left">
                        ปีงบประมาณ:
                    </span>
                    <span class="col-md-6">
                        <select class="form-control input-sm" ng-model="vm.year" ng-options="y as y for y in vm.years">
                        </select>
                    </span>
                </h3>
            </div>
        </div>
        <div class="col-md-5">
            <h3>
                <span class="pull-left">
                    ศูนย์ต้นทุน:
                </span>
                <span class="col-md-8">
                    <select class="form-control input-sm" ng-model="vm.costcenter" ng-options="c.CostCenterID as c.CostCenter.CostCenterName for c in vm.costcenters">
                        
                    </select>
                </span>
            </h3>
        </div>
    </div>



    <br />

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th class="col-md-1 text-center"> ลำดับ </th>
                        <th class="text-center"> ชื่อบัญชี </th>
                        <th class="col-md-1 text-center"> ศูนย์ต้นทุน </th>
                        <th class="col-md-1 text-center"> งบที่ได้รับ </th>
                        <th class="col-md-1 text-center"> เบิกจ่าย </th>
                        <th class="col-md-1 text-center"> คงเหลือ </th>
                        <th class="col-md-1 text-center"> สัดส่วน (%) </th>
                        <th class="col-md-1 text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="budget in vm.budgets | filter: vm.year | filter:vm.costcenter">
                        <td class="text-center"> {{ $index + 1 }}</td>
                        <td> {{ budget.AccountID + ' - ' + budget.Account.AccountName}}</td>
                        <td class="text-center"> {{ budget.CostCenterID }}</td>
                        <td class="text-right"> {{ budget.BudgetAmount | number:2 }}</td>
                        <td class="text-right"> {{ budget.WithdrawAmount | number:2 }}</td>
                        <td class="text-right" ng-class="{'text-success': budget.RemainAmount >= 0 , 'text-danger': budget.RemainAmount < 0 }"> {{ budget.RemainAmount | number:2 }}</td>
                        <td class="text-center" ng-class="{'text-success' : budget.RemainAmount >= 0 , 'text-danger': budget.RemainAmount < 0 }"> {{ budget.RemainAmount / budget.BudgetAmount * 100 | number: 2}} %</td>
                        <td class="text-center">
                            <a ui-sref="viewbudget({ id: budget.BudgetID })" title="รายละเอียด">
                                <i class="fa fa-list" aria-hidden="true"></i>
                            </a>
                            <span ng-if="budget.isAdmin">
                                |
                                <a ui-sref="editbudget({ id: budget.BudgetID })" title="แก้ไข">
                                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                </a>
                            </span>
                            <span ng-if="budget.isOwner">
                                |
                                <a ng-click="vm.deleteBudget(budget)" title="ยกเลิกงบประมาณ">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <th class="text-center"></th>
                        <th></th>
                        <th class="text-center">รวม</th>
                        <th class="text-right"> {{ vm.budgets | filter: vm.year | filter:vm.costcenter | total: 'BudgetAmount' | number:2 }} </th>
                        <th class="text-right"> {{ vm.budgets | filter: vm.year | filter:vm.costcenter | total: 'WithdrawAmount' | number:2 }} </th>
                        <th class="text-right"> {{ vm.budgets | filter: vm.year | filter:vm.costcenter | total: 'RemainAmount' | number:2 }} </th>
                        <th class="text-center" ng-class="{'text-success': (vm.budgets | filter: vm.year | filter:vm.costcenter | total: 'RemainAmount') >=0, 'text-danger': (vm.budgets | filter: vm.year | filter:vm.costcenter | total: 'RemainAmount') < 0  }">
                            {{ ((vm.budgets | filter: vm.year | filter:vm.costcenter | total: 'RemainAmount') / (vm.budgets | filter: vm.year | filter:vm.costcenter | total: 'BudgetAmount' ) * 100 | number: 2)}} %
                        </th>
                        <th class="text-center"></th>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>
