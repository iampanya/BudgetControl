
@{
    ViewBag.Title = "เปลี่ยนศูนย์ต้นทุนการทำงาน";
    Layout = null;
}

<br />
<br />
<div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12">
        <div class="card">
            <form name="frmChangeCostcenter" ng-submit="vm.saveChange()" method="post" novalidate>
                <fieldset>
                    <legend align="center">เปลี่ยนศูนย์ต้นทุนการทำงาน</legend>
                    <div class="form-group">
                        <label for="txtCurrentCostCenterId">ศูนย์ต้นทุนเดิม:</label>
                        <input type="text" id="txtCostCenterId" class="form-control text-center" 
                               ng-model="vm.form.CurrentCostCenterId"  
                               ng-disabled="true"/>
                    </div>
                    <div class="form-group">
                        <label for="selectNewCostCenterId">ศูนย์ต้นทุนใหม่:</label>
                        <select class="form-control" id="selectNewCostCenterId" 
                                ng-model="vm.form.NewCostCenterId"
                                ng-options="c.CostCenterID as c.CostCenterID + ' - '  + c.CostCenterName for c in vm.costcenterList">
                            <option value="">===== กรุณาเลือก =====</option>
                        </select>
                    </div>

                    @*<div class="form-group">
                        <input type="text" ng-model="vm.account.username" class="form-control text-center" placeholder="รหัสพนักงาน" ng-required="true" autofocus />
                    </div>
                    <div class="form-group">
                        <input type="password" ng-model="vm.account.password" class="form-control text-center" placeholder="รหัสผ่าน PEA" ng-required="true" />
                    </div>*@

                    <div class="form-group">
                        <input type="submit" value="{{ vm.btnSubmit.text }}" class="btn btn-primary btn-block" ng-disabled="frmlogin.$invalid || vm.btnSubmit.disbled" />
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

