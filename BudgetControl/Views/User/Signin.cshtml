@{
    Layout = null;
}


<br />
<br />
<div class="row">
    <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-12">
        <div class="card">
            <form name="frmlogin" ng-submit="vm.login()" method="post" novalidate>
                <fieldset>
                    <legend align="center">เข้าสู่ระบบ</legend>
                    <div class="form-group">
                        <input type="text" ng-model="vm.account.username" class="form-control text-center" placeholder="รหัสพนักงาน"  ng-required="true" autofocus/>
                    </div>
                    <div class="form-group">
                        <input type="password" ng-model="vm.account.password" class="form-control text-center" placeholder="รหัสผ่าน"  ng-required="true"/>
                    </div>

                    @*<div class="form-group text-center">
                        <label>
                            <input type="checkbox" name="checkRemember" />
                            จดจำฉันไว้ในระบบ
                        </label>
                    </div>*@
                    <div class="form-group">
                        <input type="submit" value="{{ vm.btnSubmit.name }}" class="btn btn-primary btn-block" ng-disabled="frmlogin.$invalid || vm.btnSubmit.disbled"/>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

<br/>
<div class="row" ng-if="vm.hasError">
    <div class="col-md-8 col-md-offset-2">
        <div class="alert alert-danger text-center">
            <p> {{ vm.errorMsg }} </p>
        </div>
    </div>
</div>
